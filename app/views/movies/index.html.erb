<div class = "mt-5">
  <div align="center">
    <% @movies.each.with_index(@movies.offset_value + 1) do |movie, index | %>
      <p><%= "No.#{index}:#{movie.title}"%></p>
      <iframe width="560" height="315" src="<%= movie.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gtroscope; picture-in-picture" allowfullscreen></iframe>
    <% end %>
    <div class="paginate-container">
      <div class="mx-auto" style="width:400px;">
        <%= paginate @movies %>
      </div>
    </div>
    
  </div>
</div>